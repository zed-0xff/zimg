#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

bundle install

mkdir -p samples/png_suite
cd samples/png_suite
wget -qc http://www.schaik.com/pngsuite/PngSuite-2017jul19.tgz && tar xf PngSuite-2017jul19.tgz

cd ..
if [ -d jpeg-js ]; then
        cd jpeg-js
        git pull
else
        git clone git@github.com:jpeg-js/jpeg-js.git
fi
